Language: Cpp
Standard: c++20
BasedOnStyle: Google
UseTab: Never
IndentWidth: 4
AccessModifierOffset: -4
AlignOperands: AlignAfterOperator
BinPackArguments: false
BinPackParameters: false
AllowAllArgumentsOnNextLine: false
AlignAfterOpenBracket: BlockIndent
AlwaysBreakAfterReturnType: None
ColumnLimit: 120
DerivePointerAlignment: false
ShortNamespaceLines: 16
IntegerLiteralSeparator:
  Binary: 4
  Decimal: 3
  Hex: 4
BreakBeforeBraces: Custom
BraceWrapping:
#  AfterCaseLabel: false
#  AfterClass: false
#  AfterControlStatement: false
#  AfterEnum: false
#  AfterFunction: false
  AfterNamespace: true
#  AfterStruct: false
#  AfterUnion: false
#  AfterExternBlock: false
#  BeforeCatch: false
#  BeforeElse: false
#  BeforeLambdaBody: false
#  BeforeWhile: false
#  SplitEmptyFunction: false
#  SplitEmptyRecord: false
#  SplitEmptyNamespace: false
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<gst/.*>'
    Priority: 1 # gstreamer headers
  - Regex: '^<libremidi/.*>'
    Priority: 1 # libremidi headers
  - Regex: '^<.*>'
    Priority: 2 # System headers
  - Regex: '^<[a-z_]+>' # STL headers
    Priority: 3 # Lower priority to place them last
  - Regex: '.*'
    Priority: 0 # Project headers (default)
SortIncludes: true
