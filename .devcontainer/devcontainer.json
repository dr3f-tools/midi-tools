{
	"name": "midi-tools",
	"build": {
		"dockerfile": "Dockerfile",
		"args":
		{
			"USERNAME": "${localEnv:USER}"
		}
	},
	"privileged": true,
	"workspaceMount": "source=${localWorkspaceFolder},target=/opt/midi-tools,type=bind,consistency=cached",
	"workspaceFolder": "/opt/midi-tools",
	"runArgs": [
		"--net=host",
		"-v", "/dev:/dev",
		"-v", "${localEnv:HOME}/.gitconfig:/home/${localEnv:USER}/.gitconfig",
		"-v", "${localEnv:HOME}/.ssh:/home/${localEnv:USER}/.ssh",
		"-v", "/tmp/.X11-unix:/tmp/.X11-unix",
		"--name", "midi-tools"
	],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "PULSE_SERVER": "unix:${localEnv:XDG_RUNTIME_DIR}/pulse/native"
        // "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
	"mounts": [
        {
            "source": "${localEnv:XDG_RUNTIME_DIR}/pipewire-0",
            "target": "${localEnv:XDG_RUNTIME_DIR}/pipewire-0",
            "type": "bind"
        },
        {
            "source": "${localEnv:XDG_RUNTIME_DIR}/pulse/native",
            "target": "${localEnv:XDG_RUNTIME_DIR}/pulse/native",
            "type": "bind"
        }
    ],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"mhutchie.git-graph",
				"ms-python.python"
			]
		}
	}
}